<!-- THIS IS THE TEMPLATE FOR ALL PAGES EXCEPT THE BLOG -->
<!-- page-specific content is inserted into the template via the yield statement in the body below -->

<!doctype html>
<html>

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
<%
      case page_classes.split(" ").first
        when "index"
          title = "DFM | Creative Agency Los Angeles | Brand Strategy Consulting | Brand Identity Design Firm Los Angeles "
          description = "Drawing From Memory is a boutique branding and web design agency located in downtown Los Angeles"
          keywords = "brand identity graphic design creative web design studio agency"
        when "about"
          title = "Downtown Los Angeles Graphic Design Agency"
        when "beauty"
          title = "Retail Design Agency | Cosmetics Packaging Design | Skincare Package Design | Turn Key Beauty Package Design"
          keywords = "retail packaging design services product companies skincare"
        when "blog"
          title = "Drawing From Memory | Design Studio in Downtown Los Angeles | Blog"
        when "contact"
          title = "Downtown Los Angeles Design Studio | Contact & Directions"
        when "fashion"
          title = "Los Angeles Fashion | Design Agency | Los Angeles Photography"
          keywords = "graphic design identity branding"
        when "kavaldon"
          title = "Candle Packaging Design | Luxury E-commerce website | Los Angeles Branding Agency"
          keywords = "retail design packaging branding logo"
        when "AVF"
          title = "Furniture Website Design | Alexandra Von Furstenberg | Los Angeles Branding Agency"
        when "velvet"
          title = "Apparel Website Design | Magento website design | Velvet by Graham and Spencer"
          keywords = "fashion design branding retail photography"
        
        #when "strategy"
          #title = "Los Angeles Branding Agency | Brand Strategy"
        #when "identity"
          #title = "Brand Identity Design | Logo Design | Los Angeles Branding Agency"
        #when "packaging"
          #title = "Packaging Design Agency Los Angeles | Graphic Design Agency Los Angeles"
        #when "imagery"
          #title = "Brand Photography | Product Photography | Los Angeles Branding Agency"
        #when "interactive"
          #title = "E-Commerce Website Design | Interactive Design | Los Angeles Website Design"
        #when "environment"
          #title = "Retail Tradeshow Design Agency | Los Angeles Environmental Design Agency"
        #when "environment"
          #title = "Los Angeles Graphic Design | Los Angeles Web Design | Los Angeles Branding Agency"
        
        #when "selvarey"
          #title = "Alcohol Packaging Design | Los Angeles Graphic Design | Trade Show Design"
        else
          title = "Los Angeles Graphic Design | Los Angeles Web Design | Los Angeles Branding Agency"
          description = "Drawing From Memory is a boutique branding and web design agency located in downtown Los Angeles"
          keywords = "brand identity graphic design creative web design studio agency"
        end
      %>
      
    <meta name="description" content="<%= description %>">
    <meta name="keywords" content="<%= keywords %>">

    <title><%= title %></title>

    <link href="http://www.drawingfrommemory.com/favicon.png" rel="icon" type="image/png">
    <%= stylesheet_link_tag "application" %>
  </head>

  
  <body class="<%= page_classes %>">
    <%= partial "layouts/loading_page" %>
    <%= partial "layouts/header" %>
    <%= partial "layouts/nav_page" %>

    <%= yield %> 

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
    <%= javascript_include_tag  "application" %>

    <script>
